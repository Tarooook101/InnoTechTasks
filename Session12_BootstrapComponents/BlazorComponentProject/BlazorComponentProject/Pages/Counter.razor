@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<br />
<br />

<DropDownComponent ButtonText="Actions"
                   ButtonClass="btn-success"
                   Items="@dropdownItems"
                   OnItemSelected="@OnActionSelected" />

<br />

<AlertComponent @ref="alertComponent"
                Type="AlertType.Success"
                Message="Counter updated successfully!"
                IsDismissible="true"
                IsVisible="@showAlert"
                OnDismiss="@(() => showAlert = false)" />

<br />

<div class="mt-3">
    <button class="btn btn-info me-2" @onclick="ShowToastNotification">Show Toast</button>
    <button class="btn btn-warning" @onclick="ShowCounterModal">Show Modal</button>
</div>

<ToastComponent @ref="toastComponent"
                Title="Counter Info"
                Message="@($"Current count is {currentCount}")"
                Type="ToastType.Success"
                IsVisible="@showToast"
                AutoHideDelay="5000"
                OnHide="@(() => showToast = false)" />

<ModalComponent @ref="modalComponent"
                Title="Counter Settings"
                IsVisible="@showModal"
                Size="ModalSize.Default"
                OnHide="@(() => showModal = false)">
    <BodyContent>
        <p>Current count: <strong>@currentCount</strong></p>
        <div class="mb-3">
            <label class="form-label">Set new count:</label>
            <input type="number" class="form-control" @bind="newCount" />
        </div>
    </BodyContent>
    <FooterContent>
        <button type="button" class="btn btn-secondary" @onclick="CancelModal">Cancel</button>
        <button type="button" class="btn btn-primary" @onclick="SetNewCount">Set Count</button>
    </FooterContent>
</ModalComponent>